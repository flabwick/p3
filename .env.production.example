# Production Environment Configuration
# Copy this to .env on your production server and update the values

# Database (use production database path)
DATABASE_URL="file:./prisma/prod.db"

# Server Configuration
PORT=4201
NODE_ENV=production

# Production URLs
NEXT_PUBLIC_API_URL=https://dev.jimboslice.xyz

# Dropbox OAuth (for future modules)
DROPBOX_CLIENT_ID="your_production_client_id"
DROPBOX_CLIENT_SECRET="your_production_client_secret"
DROPBOX_REDIRECT_URI=https://dev.jimboslice.xyz/api/auth/callback
